<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="4dip"
    android:paddingBottom="6dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="false">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/parchiImageIcon"
        android:src="@drawable/goldcoin"
        android:layout_weight="0.1" />
    <TextView
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:text="Parchi Details"
        android:id="@+id/txtChittyDetails"
        android:onClick="showConfirmDialog"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.37"
        android:singleLine="false"
        android:textSize="15dp"
        android:textIsSelectable="false"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="NParchi Value"
        android:id="@+id/txtChittyVal"
        android:onClick="showConfirmDialog"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.59"
        android:textSize="25dp"
        android:gravity="center_vertical|center_horizontal"
        android:clickable="true" />


</LinearLayout>